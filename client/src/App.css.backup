/* Sidebar Carousel Styles */
.sidebar-carousel {
  position: relative;
  overflow: hidden;
  border-radius: 0 0 20px 20px;
}

.sidebar-carousel-image {
  width: 100%;
  height: 250px;
  object-fit: cover;
  transition: transform 0.5s ease;
  border-radius: 0;
}

.sidebar-carousel:hover .sidebar-carousel-image {
  transform: scale(1.05);
}

.sidebar-carousel .carousel-caption {
  background: linear-gradient(135deg, rgba(220, 53, 69, 0.9), rgba(255, 107, 107, 0.9));
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border-radius: 15px;
  padding: 15px 20px;
  bottom: 20px;
  left: 20px;
  right: 20px;
  text-align: center;
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.sidebar-carousel .carousel-caption h6 {
  color: white;
  font-size: 1rem;
  font-weight: 600;
  margin: 0;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.sidebar-carousel-control {
  width: 50px;
  height: 50px;
  background: rgba(220, 53, 69, 0.9);
  border-radius: 50%;
  border: none;
  top: 50%;
  transform: translateY(-50%);
  opacity: 0;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 2px solid rgba(255, 255, 255, 0.3);
}

.sidebar-carousel:hover .sidebar-carousel-control {
  opacity: 1;
}

.sidebar-carousel-control:hover {
  background: rgba(220, 53, 69, 1);
  transform: translateY(-50%) scale(1.1);
  box-shadow: 0 8px 25px rgba(220, 53, 69, 0.4);
}

.sidebar-carousel-control.carousel-control-prev {
  left: 15px;
}

.sidebar-carousel-control.carousel-control-next {
  right: 15px;
}

.sidebar-carousel-control i {
  color: white;
  font-size: 1.2rem;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
}

.sidebar-indicators {
  bottom: 80px;
  margin: 0;
  display: flex;
  justify-content: center;
  gap: 10px;
}

.sidebar-indicators button {
  width: 12px;
  height: 12px;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.5);
  border: 2px solid rgba(220, 53, 69, 0.8);
  margin: 0;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.sidebar-indicators button.active {
  background: #dc3545;
  border-color: white;
  transform: scale(1.2);
  box-shadow: 0 4px 15px rgba(220, 53, 69, 0.4);
}

.sidebar-indicators button:hover {
  background: rgba(220, 53, 69, 0.8);
  transform: scale(1.1);
}
